{
	"identifier": "alexanderweiss.prettier",
	"name": "Prettier",
	"organization": "Alexander Weiss",
	"description": "Integrates Prettier for code formatting.",
	"version": "1.5.1",
	"categories": ["formatters", "issues"],
	"repository": "https://github.com/alexanderweiss/nova-prettier",
	"bugs": "https://github.com/alexanderweiss/nova-prettier/issues",
	"entitlements": {
		"process": true,
		"filesystem": "readonly"
	},
	"main": "main.js",
	"commands": {
		"editor": [
			{
				"title": "Format with Prettier",
				"command": "prettier.format",
				"shortcut": "option-shift-f",
				"filters": {
					"syntaxes": [
						"json",
						"html",
						"javascript",
						"jsx",
						"flow",
						"typescript",
						"vue",
						"angular",
						"less",
						"scss",
						"graphql",
						"markdown",
						"yaml",
						"css"
					]
				}
			}
		]
	},
	"config": [
		{
			"key": "prettier.format-on-save",
			"title": "Format on save",
			"description": "Whether to format documents when saved. (Can be overriden in project settings)",
			"type": "boolean",
			"default": true
		},
		{
			"key": "prettier.experimental.prettier-service",
			"title": "Run Prettier in a separate process (experimental)",
			"description": "This improves formatting speed of large files and adds support for plugins",
			"type": "boolean",
			"default": false
		}
	],
	"config-workspace": [
		{
			"key": "prettier.format-on-save",
			"title": "Format on save",
			"description": "Whether to format documents when saved.",
			"type": "enum",
			"values": ["Global Default", "Enable", "Disable"],
			"default": "Global Default"
		}
	]
}
